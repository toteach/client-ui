{
  "root": true,
  "extends": [
    "@toteach-io/eslint-config-toteach-io"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module",
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./",
    "extraFileExtensions": [".js.vue", ".vue"]
  },
  "env": {
    "es6": true,
    "amd": true,
    "node": true,
    "commonjs": true,
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": "webpack.base.js"
    }
  },
  "globals": {
    "VERSION": "readonly"
  },
  "overrides": [
    {
      "files": ["src/store/**/*.ts"],
      "rules": {
        "@typescript-eslint/typedef": "off"
      }
    },
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
